<?xml version="1.0" encoding="UTF-8"?>
<project name="KindlePatch" default="build">

	<path id="classpath">
		<fileset dir="lib" includes="**/*.jar" />
	</path>

	<target name="build">
		<delete file="jbpatcher.jar" />
		<jar destfile="jbpatcher.jar">
			<manifest>
				<attribute name="Bundle-Name" value="KPatcher" />
				<attribute name="Bundle-Version" value="1.0" />
				<attribute name="Bundle-Description" value="Kindle Patcher" />
				<attribute name="Bundle-Vendor" value="ixtab" />
				<attribute name="Bundle-Activator" value="com.mobileread.ixtab.jbpatcher.bootstrap.Stage1" />
			</manifest>
			<fileset dir="bin">
				<exclude name="test/**/*" />
			</fileset>
			<zipfileset src="lib/serp.jar">
				<include name="**/*.class" />
			</zipfileset>
		</jar>
	</target>
</project>
